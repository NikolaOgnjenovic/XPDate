<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <EditText
        android:id="@+id/articleNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/article_name"
        android:fontFamily="@font/open_sans_bold"
        android:hint="@string/article_name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/textColor"
        android:textColorHighlight="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/articleNameEditText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="10sp"
            android:text="@string/article_category"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/articleCategorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="48sp"
            android:theme="@style/DialogTheme" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:paddingStart="10sp"
            android:text="@string/expiration_date"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/actualDetectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.2"
            android:padding="10sp"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="0.6"
            android:background="@drawable/transparent_background_bordered_button"
            android:contentDescription="@string/pick_date"
            android:src="@android:drawable/ic_menu_month" />

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5sp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_button"

        android:padding="5sp"
        android:text="@string/save_article"
        android:textColor="@color/textColor"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/dateLayout" />

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cameraButton"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:layout_margin="5sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"

                android:background="@drawable/transparent_background_bordered_button"
                android:contentDescription="@string/camera"
                android:scaleType="fitCenter"

                android:src="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/galleryButton"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:layout_margin="5sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"

                android:background="@drawable/transparent_background_bordered_button"
                android:contentDescription="@string/gallery"
                android:scaleType="fitCenter"

                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <ImageButton
                android:id="@+id/cropButton"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:layout_margin="5sp"
                android:adjustViewBounds="true"
                android:background="@drawable/transparent_background_bordered_button"
                android:contentDescription="@string/crop"
                android:scaleType="fitCenter"


                android:src="@android:drawable/ic_menu_crop" />

            <Button
                android:id="@+id/detectButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:background="@drawable/transparent_background_bordered_button"
                android:padding="5sp"
                android:text="@string/detect_date"
                android:textColor="@color/textColor"

                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/transparent_background_bordered"
        android:padding="10sp"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveButton" />

</androidx.constraintlayout.widget.ConstraintLayout>