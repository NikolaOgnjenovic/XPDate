<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <EditText
        android:padding="20dp"
        android:id="@+id/articleNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/article_name"
        android:hint="@string/article_name"
        android:inputType="textPersonName"
        android:textSize="25sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/articleCategorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/articleCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/article_category"
            android:hint="@string/article_category"
            android:padding="20dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/articleCategorySpinner"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/detectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:text="@string/detected_date"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/actualDetectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detectedDateTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/pickDateButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/transparent_background_bordered_button"
            android:contentDescription="@string/pick_date"
            android:gravity="end"
            android:src="@android:drawable/ic_menu_month"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:weightSum="5"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/transparent_background_bordered_button"

            android:contentDescription="@string/save_article"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_save" />

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/transparent_background_bordered_button"

            android:contentDescription="@string/camera"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/transparent_background_bordered_button"

            android:contentDescription="@string/gallery"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/cropButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/transparent_background_bordered_button"

            android:contentDescription="@string/crop"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_crop" />

        <Button
            android:id="@+id/detectButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/detect_date"
            android:background="@drawable/transparent_background_bordered_button"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>